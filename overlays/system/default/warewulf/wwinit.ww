#!/bin/sh

echo "Hello from WWINIT"

for i in /warewulf/init.d/*; do
    NAME=`basename $i`
    echo "Launching: $NAME"
    sh "$i"
done

/bin/bash

echo "Cleaning up"
unset WWCONTAINER
unset WWHOSTNAME
unset WWROOT
unset WWIPMI_IPADDR
unset WWIPMI_NETMASK
unset WWIPMI_GATEWAY
unset WWIPMI_USER
unset WWIPMI_PASSWORD

echo "Calling {{$.Init}}..."
echo

sleep 2
exec {{$.Init}}
